.navbar.navbar-light.fixed-top.navbar-expand-md
  .container
    a.navbar-brand(href='/')
      i.fas.fa-cube
      | Caff Balance
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-collapse')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li.nav-item(class=(title === 'Home') ? 'active' : undefined)
          a.nav-link(href='/') Inicio
        li.nav-item(class=(title === 'API Examples') ? 'active' : undefined)
          a.nav-link(href='/api') Acerca De
        li.nav-item(class=(title === 'Contact') ? 'active' : undefined)
          a.nav-link(href='/contact') Contacto
        if user
          if user.type !== 'ADMIN'
            li.nav-item(class=(title === 'Routine') ? 'active' : undefined)
              a.nav-link(href='/routine') Rutina del Día
      ul.nav.navbar-nav.ml-auto
        if !user
          li.nav-item(class=(title === 'Login') ? 'active' : undefined)
            a.nav-link(href='/login') Iniciar Sesión
          li.nav-item(class=(title === 'Create Account') ? 'active' : undefined)
            a.nav-link(href='/signup') Registrarse
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined).nav-item
            a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li.dropdown-item
                a(href='/account') Mi Cuenta
              if user.type !== 'ADMIN'
                li.dropdown-item
                  a(href='/billing') Información Bancaria
              li.divider.dropdown-item
              li.dropdown-item
                a(href='/logout') Cerrar Sesión
          if user.type === 'ADMIN'
            li.dropdown(class=(title === 'Admin') ? 'active' : undefined).nav-item
              a.dropdown-toggle.nav-link(href='#', data-toggle='dropdown')
                span Administración
                i.caret
              ul.dropdown-menu
                li.dropdown-item
                  a(href='/videos') Administración de Videos
                li.dropdown-item
                  a(href='/routines') Administración de Rutinas
                li.divider.dropdown-item
                li.dropdown-item
                  a(href='/clients') Administración de Clientes
                li.dropdown-item
                  a(href='/sales') Administración de Ventas
