extends ../layout

block content
  h1 Ejercicios
  p.lead Estos son todos los ejercicios disponibles en el sistema
  a.btn.btn-success(href="/exercises/create") Añadir Ejercicio
  hr
  if exercises.length <= 0
    h3 No hay ejercicios registrados aún :(
  else
    .row
      each exercise, i in exercises
        .col-md-3.mb-2
          .card.text-center.h-100
            .card-body
              h5.card-title=exercise.title
              p.card-text=exercise.description
              a.btn.btn-primary(href=`/exercises/${exercise._id}`) Ver
              a.btn.btn-info(href=`/exercises/${exercise._id}/edit`) Editar
              a.btn.btn-danger(href=`/exercises/${exercise._id}/delete`, onclick="return confirm('¿En verdad desea eliminar este ejercicio?');") Eliminar
            .card-footer
              p= 'Última actualización: ' + exercise.updated_at