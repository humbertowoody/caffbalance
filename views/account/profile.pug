extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Tu Perfil

  form(action='/account/profile', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Correo Electrónico
      .col-md-7
        input.form-control(type='email', name='email', id='email', value=user.email, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='fname') Nombre(s)
      .col-md-7
        input.form-control(type='text', name='fname', id='fname', value=user.profile.fname, required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='lname') Apellido(s)
      .col-md-7
        input.form-control(type='text', name='lname', id='lname', value=user.profile.lname)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right Género
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', checked=user.profile.gender=='male', name='gender', value='male', data-toggle='radio')
          span  Masculino
        label.radio.col-sm-3
          input(type='radio', checked=user.profile.gender=='female', name='gender', value='female', data-toggle='radio')
          span  Femenino
        label.radio.col-sm-3
          input(type='radio', checked=user.profile.gender=='other', name='gender', value='other', data-toggle='radio')
          span  Otro
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right Gravatar
        p.text-muted (Si deseas cambiar esta imágen, visita
          a(href="https://es.gravatar.com/", target='_blank')  Gravatar.com
          |  y asegurate de usar el mismo correo que registraste en la aplicación)
      .col-sm-4
        img(src=user.gravatar(), class='profile', width='100', height='100')
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn.btn-primary(type='submit')
          i.fas.fa-pencil-alt.fa-sm
          | Actualizar Perfil

  .pb-2.mt-2.mb-4.border-bottom
    h3 Cambiar Contraseña

  form(action='/account/password', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') Nueva Contraseña
      .col-md-7
        input.form-control(type='password', name='password', id='password')
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirmar Contraseña
      .col-md-7
        input.form-control(type='password', name='confirmPassword', id='confirmPassword')
    .form-group
      .offset-sm-3.col-md-7.pl-2
        button.btn.btn-primary(type='submit')
          i.fas.fa-lock.fa-sm
          | Cambiar Contraseña
